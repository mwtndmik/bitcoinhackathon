<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SendActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter Address"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/editAddress" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editAddress" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:text="Send!"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter Amount"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editAmount" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editAddress" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <TextView
            android:text="BCH"
            android:layout_width="wrap_content"
            android:layout_height="47dp" tools:layout_editor_absoluteY="179dp"
            tools:layout_editor_absoluteX="300dp" android:id="@+id/textView4"/>
</android.support.constraint.ConstraintLayout>